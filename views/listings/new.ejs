<% layout("/layouts/boilerplate") %>
<br><br>
<div class="row">
    <div class="col-8 offset-2">
    <body>
        <h3>Create A New Listing !!</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" >Title</label>
                <input type="text" class="form-control" name="listing[title]" placeholder="enter title" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a correct title.</div>
            </div>
            <div class="mb-3">
                <label for="description">Description</label>
                <textarea name="listing[description]" class="form-control" required   placeholder="write description here.."></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter description.</div>
            </div>
           
            <div class="mb-3">
                <label for="image">Image URL</label>
                <input type="file" class="form-control" name="listing[image]" required>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price">Price</label>
                    <input  required class="form-control" name="listing[price]" placeholder="enter price">
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid price.</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="location">Location</label>
                    <input type="text" required class="form-control" name="listing[location]" placeholder="enter location">
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid location.</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="country">Country</label>
                <input type="text" required class="form-control" name="listing[country]" placeholder="enter country">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a valid country name.</div>
            </div>
            
          <button class="btn btn-dark mb-3">Submit</button>
    
    
        </form>
    </body>
</div>

</div>

